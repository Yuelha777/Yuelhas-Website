<!-- ===== JAVASCRIPT FOR CAROUSEL ===== -->
<script>
  const slides = document.getElementById("slides");
  let index = 0;

  document.getElementById("next").onclick = () => {
    index = (index + 1) % 3;
    slides.style.transform = `translateX(-${index * 600}px)`;
  };

  document.getElementById("prev").onclick = () => {
    index = (index - 1 + 3) % 3;
    slides.style.transform = `translateX(-${index * 600}px)`;
  };
</script>

